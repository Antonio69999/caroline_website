{% extends 'base.html.twig' %}
{% block meta %}
    <meta name="description" content="Caroline MARCELLIER, contact"/>
    <meta name="author" content="Caroline MARCELLIER"/>
{% endblock %}

{% block title %}Caroline MARCELLIER contact
{% endblock %}

{% block body %}
    <section class="text-gray-600 body-font relative form-container">
        {% for message in app.flashes('success') %}
            <div class="mb-4 rounded-lg bg-green-100 px-6 py-5 text-base text-green-700" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        <div class="container px-5 py-10 mx-auto flex flex-col items-center justify-center sm:px-2 md:px-0 md:pl-0" style="height: 100vh;">
            <div class="contact-image">
                <img src={{ asset("asset/images/lapairedechaussure.jpeg") }} width="650px">
                <p class="credits">La paire de chaussure, 2023</p>
            </div>
            <div class="flex flex-col text-center w-full mb-12">
                <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Contactez-moi :</h1>
            </div>

            {{ form_start(form) }}
            <div class="lg:w-1/2 md:w-2/3 mx-auto sm:w-full md:mx-0 md:ml-auto">
                <div class="flex flex-wrap -m-2 w-1/2 mx-auto sm:w-full md:w-full md:mx-0">
                    <div class="p-2 w-1/2 sm:w-full md:w-1/2">
                        <div class="relative">
                            {{ form_row(form.sujet, {
                                'label': 'Nom',
                                'attr': {
                                    'class': 'w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="p-2 w-1/2 sm:w-full md:w-1/2">
                        <div class="relative">
                            {{ form_row(form.email, {
                                'label': 'Email',
                                'attr': {
                                    'class': 'w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="p-2 w-full">
                        <div class="relative">
                            {{ form_row(form.message, {
                                'label': 'Message',
                                'attr': {
                                    'class': 'w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="p-2 w-full">
                        <div class="p-2 w-full">
                            <button class="flex mx-auto bg-white border border-black border-opacity-25 py-2 px-8 focus:outline-none hover:bg-pink-200 rounded text-lg">Envoyer</button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
    <footer class="footer bg-neutral-200 text-center dark:bg-neutral-700 lg:text-left">
        <div class="p-4 text-center text-neutral-700 dark:text-neutral-200">

            <p class="credits">@ 2024 : Les cerveaux derrière les pixels sont
                <a href="https://antoine-portfolio.projets.garage404.com" style="font-weight:bold" target="_blank">Antoine Chabeauti</a>, maître du code et
                <a href="https://www.jeromesauzet.fr" style="font-weight:bold" target="_blank">Jérôme Sauzet</a>, gourou du design à temps plein.
            </p>
            <p class="credits">
                <a href="https://www.instagram.com/rom_cool_k/?hl=fr" style="font-weight:bold" target="_blank">Romain Delrieu,</a>
                habile dessinateur toulousain. N’hésitez pas à les contacter pour les féliciter ou pour la création de votre page web.</p>
        </div>
    </footer>
{% endblock %}
