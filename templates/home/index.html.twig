    <script>
        var textElement = document.querySelector('.text-over-video');
        var textContent = textElement.textContent;
        var textIndex = 0;

        textElement.textContent = '';

        window.addEventListener('wheel', function (e) {
            if (e.deltaY > 0) { // If the user is scrolling down, reveal the next character
                if (textIndex < textContent.length) {
                    textElement.textContent += textContent[textIndex];
                    textIndex++;
                }
            } else { // If the user is scrolling up, hide the last character
                if (textIndex > 0) {
                    textElement.textContent = textElement.textContent.slice(0, -1);
                    textIndex--;
                }
            }
        });
